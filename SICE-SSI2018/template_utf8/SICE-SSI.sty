\renewcommand{\baselinestretch}{0.82} % Modify the value, if needed.

\def\topfraction{0.99}
\def\bottomfraction{0.99}
\def\textfraction{0.01}
\def\floatpagefraction{0.99}
\def\dbltopfraction{0.99}
